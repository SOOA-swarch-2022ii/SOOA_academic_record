Microservice docker build

sudo docker build -t academic_record_ms .



sudo docker run -p 4001:4001 -e DB_HOST=172.17.0.2 -e DB_PORT=3307 -e DB_USER=admin -e DB_PASSWORD=2022 -e DB_NAME=academic_record_db -e URL=0.0.0.0:4001 academic_record_ms
